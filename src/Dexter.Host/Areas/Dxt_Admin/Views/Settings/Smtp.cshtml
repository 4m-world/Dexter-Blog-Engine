@model Dexter.Host.Areas.Dxt_Admin.Models.Settings.SmtpViewModel

@{
    Layout = "~/Areas/Dxt_Admin/Views/Shared/_layoutWithMenu.cshtml";
}

<section class="grid_12">
	@if (!ViewData.ModelState.IsValid) {
		<ul class="message error no-margin">
			@Html.ValidationSummary()
		</ul>	
	}
	
	<div class="block-border">
		<form method="post" id="simple_form" class="block-content form">
			<h1>Edit SMTP Settings</h1>

			<fieldset class="grey-bg required">
				<legend>Required Fields</legend>
			<p>
				<label for="simple-required">Smtp Host</label>
				@Html.TextBoxFor(x => x.Smtp.SmtpHost, new { @class = "full-width", placeholder = "Write here the title of the blog" })
			</p>
			</fieldset>
			<fieldset class="grey-bg">
				<p>
					<label>Username</label>
					@Html.TextBoxFor(x => x.Smtp.Username, new { @class = "full-width", placeholder = "Write here the title of the blog" })
				</p>
				<p>
					<label>Password</label>
					@Html.PasswordFor(x => x.Smtp.Password, new { @class = "full-width", placeholder = "Write here the title of the blog" })
				</p>
				<p>
					<label for="simple-required">Port</label>
					@Html.PasswordFor(x => x.Smtp.Port, new { @class = "full-width", placeholder = "Write here the title of the blog" })
				</p>
				<p>
					<label>UseSSL</label>
					@Html.CheckBoxFor( x => x.Smtp.UseSSL, new { @class = "mini-switch"} )
				</p>
			</fieldset>
		</form>
	</div>

</section>