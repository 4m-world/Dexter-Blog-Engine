@model Dexter.Host.Areas.Dxt_Admin.Models.Settings.BlogConfigurationViewModel

@{
    Layout = "~/Areas/Dxt_Admin/Views/Shared/_layoutWithMenu.cshtml";
}

<section class="grid_12">
	@if (!ViewData.ModelState.IsValid) {
		<ul class="message error no-margin">
			@Html.ValidationSummary()
		</ul>	
	}
	
	<div class="block-border">
		<form method="post" id="simple_form" class="block-content form">
			<h1>Edit Settings</h1>
			
			<fieldset class="grey-bg required">
				<legend>Required Fields</legend>
				<p>
					<label for="simple-required">Blog Name</label>
					@Html.TextBoxFor(x => x.BlogConfiguration.Name, new { @class = "full-width", placeholder = "Write here the name of the blog" })
				</p>
				<p>
					<label for="simple-required">Site Domain (i.e. http://www.mydomain.com)</label>
					@Html.TextBoxFor(x => x.BlogConfiguration.SiteDomain, new { @class = "full-width", placeholder = "Write here the domain of the site" })
				</p>
				<p>
					<label for="simple-required">TimeZone</label>
					@Html.DropDownListFor(x => x.BlogConfiguration.TimeZone, Model.TimesZones.Select(x => new SelectListItem { Text = x.DisplayName, Value = x.Id, Selected = (x.Id == Model.BlogConfiguration.TimeZone) }), new { @class = "full-width" })
				</p>
			</fieldset>
		</form>
	</div>

</section>
