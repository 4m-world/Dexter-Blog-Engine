<?xml version="1.0"?>
<configuration>
	<configSections>
		<sectionGroup name="common">
			<section name="logging" type="Common.Logging.ConfigurationSectionHandler, Common.Logging"/>
		</sectionGroup>

		<section name="log4net" type="log4net.Config.Log4NetConfigurationSectionHandler, log4net"/>
	</configSections>

	<common>
		<logging>
			<factoryAdapter type="Common.Logging.Log4Net.Log4NetLoggerFactoryAdapter, Common.Logging.Log4Net">
				<arg key="configType" value="INLINE"/>
			</factoryAdapter>
		</logging>
	</common>

	<log4net>
		<appender name="TestLog" type="Dexter.Dependency.Castle.Test.Appenders.TestAppender, Dexter.Dependency.Castle.Test">
			<layout type="log4net.Layout.PatternLayout">
				<param name="ConversionPattern" value="%date [%thread] %-5level %logger [%property{NDC}] - %message %property{log4net:HostName} [%property{Url}] [%property{UrlReferrer}] [%property{UserAgent}] %newline %exception"/>
			</layout>
		</appender>

		<root>
			<level value="DEBUG"/>
			<appender-ref ref="TestLog"/>
		</root>
	</log4net>

	<runtime>
		<assemblyBinding xmlns="urn:schemas-microsoft-com:asm.v1">
			<dependentAssembly>
				<assemblyIdentity name="Common.Logging" publicKeyToken="af08829b84f0328e"/>
				<bindingRedirect oldVersion="0.0.0.0-65535.65535.65535.65535" newVersion="2.1.1.0"/>
				<!-- reference specific file: -->
				<!-- codeBase version="2.1.0.0" href="../../../build/net/2.0/release/Common.Logging.dll"/ -->
			</dependentAssembly>
		</assemblyBinding>
	</runtime>

<startup><supportedRuntime version="v4.0" sku=".NETFramework,Version=v4.5"/></startup></configuration>
