@model Dexter.Host.Areas.Dxt_Admin.Models.Settings.TrackingViewModel

@{
    Layout = "~/Areas/Dxt_Admin/Views/Shared/_layoutWithMenu.cshtml";
}

<section class="grid_12">
	@if (!ViewData.ModelState.IsValid) {
		<ul class="message error no-margin">
			@Html.ValidationSummary()
		</ul>	
	}
	
	<div class="block-border">
		<form method="post" id="simple_form" class="block-content form">
			<h1>Edit Tracking Settings</h1>
			
			<fieldset class="grey-bg">
				<p>
					<label>Enable PingBack Receive</label>
					@Html.CheckBoxFor( x => x.Tracking.EnablePingBackReceive, new { @class = "mini-switch"} )
				</p>
				<p>
					<label>Enable PingBack Send</label>
					@Html.CheckBoxFor( x => x.Tracking.EnablePingBackSend, new { @class = "mini-switch"} )
				</p>
				<p>
					<label>Enable TrackBack Receive</label>
					@Html.CheckBoxFor( x => x.Tracking.EnableTrackBackReceive, new { @class = "mini-switch"} )
				</p>
				<p>
					<label>Enable TrackBack Send</label>
					@Html.CheckBoxFor( x => x.Tracking.EnableTrackBackSend, new { @class = "mini-switch"} )
				</p>
				<p>
					<label>Enable Referrer Tracking</label>
					@Html.CheckBoxFor( x => x.Tracking.EnableReferrerTracking, new { @class = "mini-switch"} )
				</p>
			</fieldset>
		</form>
	</div>

</section>
